<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Appenders>
      <Console name="Consolita" target="SYSTEM_OUT">
	     		 <!--|Formato hora| metodo|NivelDeLog|nombreDeClase|MensajeSeMandoALogear|--> 		
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} -- %msg%n"/>
    </Console>
    <File name="LogToFile" fileName="logs/app.log">
         <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
     </File>
  </Appenders>
  <Loggers>
    <!--<Root level="trace">-->
    <!--<Root level="debug">-->
    <Root level="warn">
	<!--<AppenderRef ref="LogToFile"/>-->
	<AppenderRef ref="Consolita"/>
    </Root>
  </Loggers>
</Configuration>
